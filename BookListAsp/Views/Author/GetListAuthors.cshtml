@model IEnumerable<ClassesModels.Models.Author>

    @{
    ViewData["Title"] = "Список авторов";
    }
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Год рождения</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in @Model)
            {
<tr>
    <td>@i.AuthorId</td>
    <td>@i.LastName</td>
    <td>@i.FirstName</td>
    <td>@i.Patronymic</td>
    <td>@i.Birthyear</td>
    <td><a asp-action="DeleteAuthor" asp-route-id="@i.AuthorId">Удалить</a></td>
</tr>            }
        </tbody>
    </table>
    <form method="get">
        <button asp-controller="Author" asp-action="AddAuthor">Добавить</button>
    </form>
</div>
