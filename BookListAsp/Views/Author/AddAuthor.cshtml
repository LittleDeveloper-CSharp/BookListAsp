@model Interface.Models.Author
@{
    ViewData["Title"] = "Добавление автора";
}
<form method="post">
    <div>
        <p>
            <label asp-for="LastName">Фамилия:</label>
            <input asp-for="LastName" />
        </p>
        <p>
            <label asp-for="FirstName">Имя:</label>
            <input asp-for="FirstName" />
        </p>
        <p>
            <label asp-for="Patronymic">Отчество:</label>
            <input asp-for="Patronymic" />
        </p>
        <p>
            <label asp-for="Birthyear">Год рождения:</label>
            <input asp-for="Birthyear" />
        </p>
    </div>
    <button type="submit">Добавить</button>
</form>